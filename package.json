{
  "name": "ts-library",
  "version": "1.0.3",
  "description": "A starter template for typescript-based library",
  "main": "dist/ts-library.js",
  "files": [
    "dist/",
    "./LICENSE.md",
    "./README.md",
    "./package.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henryhale/ts-library.git"
  },
  "keywords": [],
  "author": {
    "name": "Henry Hale",
    "url": "https://github.com/henryhale"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/henryhale/ts-library/issues"
  },
  "homepage": "https://github.com/henryhale/ts-library#readme",
  "type": "module",
  "scripts": {
    "build": "tsc -b && rollup -c",
    "dev": "concurrently \"tsc -w\" \"rollup -c -w\"",
    "lint": "eslint -c .eslintrc.json --max-warnings 0 --ext .ts source/",
    "lint:fix": "eslint \"source/**/*.ts\" --fix",
    "prepack": "pnpm build",
    "prepare": "husky install",
    "release": "release-it",
    "test": "echo \"Error: no test specified\""
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "lint-staged": {
    "*.ts": "pnpm lint:fix"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "auto-changelog": "^2.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "release-it": "^17.0.1",
    "rollup": "^4.9.1",
    "typescript": "^5.3.3"
  }
}
